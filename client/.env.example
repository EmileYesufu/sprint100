# Sprint100 Client Environment Configuration
# Copy this file to .env and update the values

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:4000
SERVER_URL=http://localhost:4000

# App Environment
APP_ENV=development

# Feature Flags
FEATURE_FLAGS=challenges,training,leaderboard

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=false

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug

# Optional: Push Notifications
# EXPO_PUBLIC_PUSH_NOTIFICATIONS=true
# EXPO_PUBLIC_FCM_SERVER_KEY=your_fcm_server_key

# Optional: Social Login
# EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
# EXPO_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id

# Optional: Payment Processing
# EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Optional: Map Services
# EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Optional: Deep Linking
# EXPO_PUBLIC_DEEP_LINK_SCHEME=sprint100
# EXPO_PUBLIC_DEEP_LINK_DOMAIN=app.sprint100.com
