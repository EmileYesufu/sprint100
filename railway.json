{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "sprint100-backend": {
      "rootDir": "server",
      "build": {
        "command": "npm ci && npm run build"
      },
      "start": {
        "command": "node dist/server.js"
      },
      "env": {
        "NODE_ENV": "production",
        "DATABASE_URL": "",
        "JWT_SECRET": "",
        "ALLOWED_ORIGINS": "https://sprint100.app,https://testflight.apple.com",
        "SUPERUSER_EMAIL": "",
        "SUPERUSER_PASSWORD": ""
      }
    }
  }
}
