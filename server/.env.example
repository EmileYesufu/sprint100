# Sprint100 Server Environment Configuration
# Copy this file to .env and update the values

# Environment
NODE_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=4000

# Database
DATABASE_URL=file:./prisma/dev.db

# Security
JWT_SECRET=your_jwt_secret_change_this_in_production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:19006,exp://192.168.1.250:19000,exp://localhost:19000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Logging
ENABLE_REQUEST_LOGGING=true

# Optional: External Database (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/sprint100

# Optional: Redis (for session storage)
# REDIS_URL=redis://localhost:6379

# Optional: Email Service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Analytics
# ANALYTICS_ENABLED=false
# ANALYTICS_API_KEY=your_analytics_key
