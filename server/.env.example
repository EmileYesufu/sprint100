# Sprint100 Server Environment Configuration
# Copy this to .env and update values

# Server Configuration
HOST=0.0.0.0
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL=file:./prisma/dev.db

# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/database

# Authentication
JWT_SECRET=dev_secret_change_me_in_production

# CORS - Comma-separated list of allowed origins
# For development, use * (all origins)
# For production, specify exact origins
ALLOWED_ORIGINS=*

# Examples for production:
# ALLOWED_ORIGINS=https://sprint100.app,https://www.sprint100.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Logging
ENABLE_REQUEST_LOGGING=true
