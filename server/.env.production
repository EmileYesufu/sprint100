# Sprint100 Server Production Environment Configuration
# This file is used when NODE_ENV is set to 'production'

NODE_ENV=production
HOST=0.0.0.0
PORT=4000

# Database - Use PostgreSQL in production
DATABASE_URL=postgresql://sprint100_user:secure_password_here@localhost:5432/sprint100_prod

# Security - MUST be set to a secure value in production
JWT_SECRET=prod_super_secure_jwt_secret_2024_sprint100_production_key

# CORS Configuration - Restrict to your domain
ALLOWED_ORIGINS=https://sprint100.com,https://app.sprint100.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
ENABLE_REQUEST_LOGGING=false
