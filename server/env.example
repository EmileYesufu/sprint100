# Sprint100 Server Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Development (local PostgreSQL):
DATABASE_URL="postgresql://sprint100_user:sprint100_pass@localhost:5432/sprint100_dev"

# Production (cloud PostgreSQL):
# DATABASE_URL="postgresql://username:password@hostname:5432/sprint100_prod"

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Environment (development, production, test)
NODE_ENV="development"

# Server host and port
HOST="0.0.0.0"
PORT="4000"

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secret (32+ characters, use: openssl rand -hex 32)
JWT_SECRET="your_super_secret_jwt_key_here_minimum_32_characters_long"

# CORS Origins (comma-separated URLs)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8081,https://sprint100.com,https://app.sprint100.com"

# ===========================================
# RATE LIMITING
# ===========================================

# Rate limiting configuration
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="900000"

# ===========================================
# LOGGING
# ===========================================

# Request logging (true for development, false for production)
ENABLE_REQUEST_LOGGING="true"

# ===========================================
# PRODUCTION DEPLOYMENT
# ===========================================

# For production deployment, ensure:
# 1. NODE_ENV="production"
# 2. Use strong JWT_SECRET (32+ chars)
# 3. Set specific ALLOWED_ORIGINS (not *)
# 4. Use managed PostgreSQL database
# 5. ENABLE_REQUEST_LOGGING="false"

# ===========================================
# CLOUD PROVIDER EXAMPLES
# ===========================================

# Render.com
# DATABASE_URL="postgresql://user:pass@host:5432/dbname"
# NODE_ENV="production"
# ALLOWED_ORIGINS="https://your-app.onrender.com"

# Heroku
# DATABASE_URL="postgresql://user:pass@host:5432/dbname"
# NODE_ENV="production"
# ALLOWED_ORIGINS="https://your-app.herokuapp.com"

# Fly.io
# DATABASE_URL="postgresql://user:pass@host:5432/dbname"
# NODE_ENV="production"
# ALLOWED_ORIGINS="https://your-app.fly.dev"
